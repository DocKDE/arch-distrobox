pkgname=docker-slim
pkgver=${TAG}
pkgrel=1
pkgdesc="Minify and Secure Docker containers"
arch=('x86_64')
url="https://github.com/docker-slim/docker-slim"
license=('apache')
depends=()
source=("${pkgver}.tar.gz::https://downloads.dockerslim.com/releases/${pkgver}/dist_linux.tar.gz")
sha256sums=("SKIP")

package() {
  cd "$srcdir/"

  install -Dm755 dist_linux/slim "${pkgdir}/usr/bin/slim"
  install -Dm755 dist_linux/slim-sensor "${pkgdir}/usr/bin/slim-sensor"
}

